<h1>Create Milkshake</h1>

<form action="<%= milkshakes_path %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div>
    <label for="name">Name</label>
    <input type="text" name="milkshake[name]" id="name" /> 
  </div>
  <div>
    <label for="description">Description</label>
    <textarea name="milkshake[description]" id="description"></textarea>
  </div>
  <div>
    <label for="price">Price (in cents)</label>
    <input type="number" name="milkshake[price]" id="price" min="0" />
  </div>
  <input type="submit" value="Create" />
</form>